<div class="project-box">
    <h3 class="project-title"><%= project.title %><% if (project.period) { %> (<%= project.period %>)<% } %></h3>
    <div class="project-meta"><strong>역할:</strong> <%= project.role %></div>
    <div class="project-background">
        <% if (project.bgTitle) { %><strong style="color: #1e3a5f; display: block; margin-bottom: 8px;"><%= project.bgTitle %></strong><% } %>
        <%= project.background %>
    </div>
    <div class="achievements-title"><%= project.achievementsTitle || '[주요 성과]' %></div>
    <ul class="achievements">
        <% project.achievements.forEach(function(ach) { %>
        <li><strong><%= ach.title %><% if (ach.highlight) { %> <span class="highlight"><%= ach.highlight %></span><% } %>:</strong> <%= ach.description %></li>
        <% }); %>
    </ul>
    <% if (project.technicalDecisions) { %>
    <div class="achievements-title"><%= project.technicalDecisions.title %></div>
    <ul class="achievements">
        <% project.technicalDecisions.items.forEach(function(item) { %>
        <li><strong><%= item.title %>:</strong> <%= item.description %></li>
        <% }); %>
    </ul>
    <% } %>
    <% if (project.additionalContributions) { %>
    <div class="achievements-title"><%= project.additionalContributions.title %></div>
    <ul class="achievements">
        <% project.additionalContributions.items.forEach(function(item) { %>
        <li><strong><%= item.title %>:</strong> <%= item.description %></li>
        <% }); %>
    </ul>
    <% } %>
    <%- include('tech-stack', { techStack: project.techStack }) %>
</div>
